<%- include('../partials/header') %>
    <h1>My Library</h1>
    <div class="search-container">
        <input class="search" type="search" name="search" pattern="\S+.*" autocomplete="off" required>
        <span class="input-placeholder">Search</span>
    </div>

    <div class="newandpop-container">
            
    </div>
    <section class="main">

        <div class="bookshelf-container">
            <div class="bookshelf title">My Bookshelves 
                <a class="first-link" href="/bookshelf/new"> 

                    <button class="add" type="submit">
                        <span></span>
                        <span></span>
                    </button>
                </a>
            </div>
     
            <% if(user){ bookshelves.forEach(function(b) { %>

                <div class="bookshelf">
                    <a href="/bookshelf/<%= b._id %>">
                        <%= b.name %>
                    </a>
                    <div class="delete-container">
                        <form action="/bookshelf/<%= b._id %>?_method=DELETE" method="POST">
                            <button class="delete" type="submit">
                                <span></span>
                                <span></span>
                            </button>
                        </form>
                    </div>

                </div>
                <% }); } %>
        </div>
        <div class="books-container">
            <div class="bookshelf title">My Books</div>

        </div>
    </section>

    <%- include('../partials/footer') %>