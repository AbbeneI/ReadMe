<%- include('../partials/header') %>
    <h1>My Library</h1>
    <section class="main">
        <div class="bookshelf-container">
            <a href="/bookshelf/create">New Bookshelf</a>

            <% if(user){ bookshelves.forEach(function(b) { %>

                <div class="bookshelf">
                    <h6>
                        <a href="/bookshelf/<%= b._id %>">
                            <%= b.name %>
                        </a>
                    </h6>
                    <div class="delete-container">
                        <form action="/bookshelf/<%= b._id %>?_method=DELETE" method="POST">
                            <button class="delete" type="submit">
                                <span></span>
                                <span></span>
                            </button>
                        </form>
                    </div>

                </div>
                <% }); } %>
        </div>
        <div class="books-container">
            <div class="book">
                <div class="thumbnail"></div>
                <h3>Book Title</h3>
                <p>Book Author</p>
                <p>
                    Book Summary
                </p>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>